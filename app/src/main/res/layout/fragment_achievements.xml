<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".mainfragments.AchievementsFragment"
    android:background="#1E293B">

    <TextView
        android:id="@+id/my_achievements"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="67dp"
        android:fontFamily="@font/ruberoid_bold"
        android:text="@string/my_achievements"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.12" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="268dp"
        android:background="@drawable/button"
        android:fontFamily="@font/inter_bold"
        android:text="@string/add_avatar"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/level"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="67dp"
        android:background="@drawable/button"
        android:fontFamily="@font/inter_bold"
        android:text="@string/level"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:backgroundTint="#334155"
        app:layout_constraintBottom_toTopOf="@+id/register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.898" />

    <TextView
        android:id="@+id/task_of_the_day"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_marginLeft="16dp"
        android:fontFamily="@font/inter_bold"
        android:text="@string/task_of_the_day"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/level" />

    <TextView
        android:id="@+id/aytal_phone_number"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/inter_regular"
        android:text="@string/aytal_phone_number"
        android:textColor="#94A3B8"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/level"
        app:layout_constraintStart_toEndOf="@+id/circleImageView"
        app:layout_constraintTop_toBottomOf="@+id/my_achievements"
        app:layout_constraintVertical_bias="0.792" />

    <TextView
        android:id="@+id/aytal"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:fontFamily="@font/inter_bold"
        android:text="@string/aytal"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/level"
        app:layout_constraintStart_toEndOf="@+id/circleImageView"
        app:layout_constraintTop_toBottomOf="@+id/my_achievements" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView2"
        android:layout_width="59dp"
        android:layout_height="57dp"
        android:layout_marginStart="50dp"
        android:backgroundTint="#334155"
        android:elevation="1dp"
        android:src="@drawable/cowboy"
        app:layout_constraintBottom_toTopOf="@+id/level"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_achievements"
        app:layout_constraintVertical_bias="0.505" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="126dp"
        android:layout_height="112dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="#334155"
        android:src="@drawable/ic_baseline_lens_24"
        app:layout_constraintBottom_toTopOf="@+id/level"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_achievements"
        app:layout_constraintVertical_bias="0.473" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/tasks"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="16dp"
        android:textSize="16sp"
        android:fontFamily="@font/inter_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register" />

</androidx.constraintlayout.widget.ConstraintLayout>